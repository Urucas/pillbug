#!/usr/bin/env node
var argv = require('minimist')(process.argv.slice(2));
if(argv.help) {
  console.log([
    'pillbug, a simple static express server',
    'Usage: pillbug [port]'
  ].join('\n'));
  return;
}
var port = argv["_"][0] || (process.env.PORT || 5000);
var server = require('../node')(port);
server.run();
console.log("Running server on "+server.get_uri());
server.open();
